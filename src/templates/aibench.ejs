<div
  style="
    max-width: 100%;
    margin: 0 auto;
    padding: 15px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
      'Helvetica Neue', Arial, sans-serif;
    line-height: 1.8;
    color: #333;
  "
>
  <div
    style="
      font-size: 24px;
      font-weight: bold;
      text-align: center;
      margin: 20px 0;
      color: #1a1a1a;
    "
  >
    <%= title %>
  </div>

  <div
    style="
      font-size: 14px;
      color: #666;
      text-align: center;
      margin-bottom: 30px;
    "
  >
    Last Updated: <%= updateTime %>
  </div>

  <div style="margin: 30px 0">
    <div
      style="
        font-size: 18px;
        font-weight: bold;
        color: #1a1a1a;
        margin-bottom: 15px;
        border-left: 4px solid #07c160;
        padding-left: 10px;
      "
    >
      üèÜ ÂÖ®Â±ÄÊéíÂêç Top 10
    </div>
    <div style="overflow-x: auto">
      <table
        style="
          width: 100%;
          border-collapse: collapse;
          font-size: 14px;
          margin: 15px 0;
        "
      >
        <thead>
          <tr style="background-color: #f8f9fa">
            <th
              style="
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              Model
            </th>
            <th
              style="
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              Organization
            </th>
            <th
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              Global
            </th>
            <th
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              Reasoning
            </th>
            <th
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              Coding
            </th>
            <th
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              Math
            </th>
            <th
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              Data Analysis
            </th>
            <th
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              Language
            </th>
            <th
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              IF
            </th>
          </tr>
        </thead>
        <tbody>
          <% globalTop10.forEach((model, index) => { %>
          <tr
            style="<%= index % 2 === 0 ? 'background-color: #f8f9fa;' : '' %>"
          >
            <td
              style="
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              <%= model.name %>
            </td>
            <td
              style="
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              <%= model.organization || '-' %>
            </td>
            <td
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
                font-family: monospace;
              "
            >
              <%= model.score.toFixed(2) %>
            </td>
            <td
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
                font-family: monospace;
              "
            >
              <%= model.reasoning?.toFixed(2) || '-' %>
            </td>
            <td
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
                font-family: monospace;
              "
            >
              <%= model.coding?.toFixed(2) || '-' %>
            </td>
            <td
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
                font-family: monospace;
              "
            >
              <%= model.math?.toFixed(2) || '-' %>
            </td>
            <td
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
                font-family: monospace;
              "
            >
              <%= model.dataAnalysis?.toFixed(2) || '-' %>
            </td>
            <td
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
                font-family: monospace;
              "
            >
              <%= model.language?.toFixed(2) || '-' %>
            </td>
            <td
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
                font-family: monospace;
              "
            >
              <%= model.if?.toFixed(2) || '-' %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <% categories.forEach(category => { %>
  <div style="margin: 30px 0">
    <div
      style="
        font-size: 18px;
        font-weight: bold;
        color: #1a1a1a;
        margin-bottom: 15px;
        border-left: 4px solid #07c160;
        padding-left: 10px;
      "
    >
      <%= category.icon %> <%= category.name %>
    </div>
    <div style="overflow-x: auto">
      <table
        style="
          width: 100%;
          border-collapse: collapse;
          font-size: 14px;
          margin: 15px 0;
        "
      >
        <thead>
          <tr style="background-color: #f8f9fa">
            <th
              style="
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              Model
            </th>
            <th
              style="
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              Organization
            </th>
            <th
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              Score
            </th>
          </tr>
        </thead>
        <tbody>
          <% category.models.forEach((model, index) => { %>
          <tr
            style="<%= index % 2 === 0 ? 'background-color: #f8f9fa;' : '' %>"
          >
            <td
              style="
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              <%= model.name %>
            </td>
            <td
              style="
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #e6e6e6;
              "
            >
              <%= model.organization || '-' %>
            </td>
            <td
              style="
                padding: 12px;
                text-align: right;
                border-bottom: 1px solid #e6e6e6;
                font-family: monospace;
              "
            >
              <%= model.score.toFixed(2) %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  <% }); %>

  <div
    style="
      margin-top: 40px;
      padding-top: 20px;
      border-top: 1px solid #e6e6e6;
      font-size: 13px;
      color: #666;
      text-align: center;
    "
  >
    <p style="margin: 5px 0">Source: LiveBench.ai</p>
    <p style="margin: 5px 0">
      Note: Data is for reference only. Actual performance may vary depending on
      specific use cases.
    </p>
  </div>
</div>
