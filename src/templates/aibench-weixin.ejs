<div
  style="
    max-width: 100%;
    margin: 0 auto;
    padding: 10px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
      'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    color: #333;
  "
>
  <div
    style="
      font-size: 20px;
      font-weight: bold;
      text-align: center;
      margin: 20px 0;
      color: #1a1a1a;
    "
  >
    <%= title %>
  </div>

  <div
    style="
      font-size: 14px;
      color: #666;
      text-align: center;
      margin-bottom: 30px;
    "
  >
    Êõ¥Êñ∞Êó∂Èó¥Ôºö<%= updateTime %>
  </div>

  <!-- ÂÖ®Â±ÄÊéíÂêç Top 10 -->
  <div style="margin: 25px 0">
    <div
      style="
        font-size: 18px;
        font-weight: bold;
        color: #1a1a1a;
        margin-bottom: 20px;
        padding: 10px 15px;
        background: #f8f9fa;
        border-radius: 6px;
      "
    >
      üèÜ ÂÖ®Â±ÄÊéíÂêç Top 10
    </div>

    <% globalTop10.forEach((model, index) => { %>
    <div
      style="
        padding: 15px;
        margin-bottom: 12px;
        background-color: #fff;
        border: 1px solid #eee;
        border-radius: 6px;
        font-size: 14px;
      "
    >
      <div
        style="
          display: flex;
          justify-content: space-between;
          align-items: flex-start;
        "
      >
        <div style="flex: 3">
          <div style="display: flex; align-items: flex-start">
            <span
              style="display: inline-block; min-width: 24px; height: 24px; line-height: 24px; text-align: center; background: <%= index < 3 ? '#07c160' : '#f0f0f0' %>; color: <%= index < 3 ? '#fff' : '#666' %>; border-radius: 4px; margin-right: 8px; font-size: 12px; flex-shrink: 0;"
              ><%= index + 1 %></span
            >
            <strong style="color: #1a1a1a; font-size: 15px"
              ><%= model.name %></strong
            >
          </div>
          <div
            style="
              font-size: 12px;
              color: #666;
              margin-top: 4px;
              margin-left: 32px;
            "
          >
            <%= model.organization || '-' %>
          </div>
        </div>
        <div style="flex: 1; text-align: right">
          <span
            style="
              font-family: monospace;
              color: #07c160;
              font-weight: bold;
              font-size: 16px;
            "
            ><%= model.score.toFixed(2) %></span
          >
        </div>
      </div>
    </div>
    <% }); %>
  </div>

